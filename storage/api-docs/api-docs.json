{
    "openapi": "3.0.0",
    "info": {
        "title": "MarketAPI",
        "contact": {
            "email": "jonathan.juarez.valera@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Make a user login retrieving the PersonalAccessToken",
                "description": "Endpoint to get a PersonalAccessToken with credentials.",
                "operationId": "581d46be1a674a79ed9c0c1efe9e126d",
                "requestBody": {
                    "description": "Email and password to make the login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "Email of the user",
                                        "type": "string",
                                        "example": "correo@correo.com"
                                    },
                                    "password": {
                                        "description": "The password of the user",
                                        "type": "string",
                                        "example": "abc123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Credentials are correctly and token is retrieved",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "description": "Personal access token",
                                            "example": "1|bZmu4nZqCViOqg7i9JL5LwYlRvl24HkP9uDdeLfO"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/logout": {
            "delete": {
                "tags": [
                    "auth"
                ],
                "summary": "Revoke a PersonalAccessToken",
                "description": "Revoke the token from the server of the user that makes the request",
                "operationId": "27dea412e035b8018669583a02057c28",
                "responses": {
                    "200": {
                        "description": "The token has been revoked correctly",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": true
                            }
                        }
                    }
                }
            }
        },
        "/api/sales": {
            "get": {
                "tags": [
                    "sales"
                ],
                "summary": "Retrieve a pagination of sales based on the search by date",
                "description": "Return a pagination of all sales",
                "operationId": "248121b133c730c6860e94383dfe3e12",
                "parameters": [
                    {
                        "name": "searchQuery",
                        "in": "query",
                        "description": "A date valid to filter sales",
                        "required": false,
                        "example": "2025-07-06"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sales paginated",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            }
        },
        "/api/sales/store": {
            "post": {
                "tags": [
                    "sales"
                ],
                "summary": "Create a new sale with products",
                "description": "Create a new sale with products included",
                "operationId": "2c0fcc3b63f21d52227fa84613948709",
                "requestBody": {
                    "description": "Data necessary to create the sale",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/sale_request"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sale created correctly",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/sale_response"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Some data input is not permitted",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "You need a PersonalAccessToken",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            }
        },
        "/api/sales/show/{sale}": {
            "get": {
                "tags": [
                    "sales"
                ],
                "summary": "Retrieve a sale.",
                "operationId": "5e7259450c479ddaa559aa25d8b76ad0",
                "parameters": [
                    {
                        "name": "sale",
                        "in": "path",
                        "description": "Id of the sale to get",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The sale specified in url",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/sale_response"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The sale does not exists in database"
                    },
                    "422": {
                        "description": "You send a invalid value in the URL Param"
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            }
        },
        "/api/sales/update/{sale}": {
            "put": {
                "tags": [
                    "sales"
                ],
                "summary": "Update the specified resource in storage.",
                "operationId": "8a12b65b3fb26a64b5bee515817e1a5f",
                "parameters": [
                    {
                        "name": "sale",
                        "in": "path",
                        "description": "Id of the sale to get",
                        "required": true,
                        "example": 1
                    }
                ],
                "requestBody": {
                    "description": "The request body may include all or only some of the following fields. All fields are optional unless otherwise specified.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/sale_request"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The sale modified correctly",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/sale_response"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            }
        },
        "/api/sales/delete/{sale}": {
            "delete": {
                "tags": [
                    "sales"
                ],
                "summary": "Remove the specified resource from storage.",
                "operationId": "aa19aec9cf4eea1681445fdbe0200d97",
                "parameters": [
                    {
                        "name": "sale",
                        "in": "path",
                        "description": "Id of the sale to get",
                        "required": true,
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The sale has entered to be cancelled",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "boolean"
                                },
                                "example": true
                            }
                        }
                    },
                    "422": {
                        "description": "Some of the inputs or input in URL Param are not valid"
                    },
                    "401": {
                        "description": "You need to use your personal access token"
                    }
                },
                "security": [
                    {
                        "bearerToken": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "product_response": {
                "title": "ProductDTO",
                "description": "Response of a product in each request related to it",
                "properties": {
                    "id": {
                        "title": "id",
                        "description": "The ID of the product",
                        "type": "integer"
                    },
                    "name": {
                        "title": "name",
                        "description": "The name of product",
                        "type": "string",
                        "example": "T SHIRT"
                    },
                    "slug": {
                        "title": "slug",
                        "description": "Slug of product for SEO apps",
                        "type": "string",
                        "example": "t_shirt"
                    },
                    "description": {
                        "title": "description",
                        "description": "Description of the product",
                        "type": "string",
                        "example": "A simple T-Shirt"
                    },
                    "price": {
                        "title": "price",
                        "description": "Price for unity",
                        "type": "number",
                        "format": "float",
                        "example": 99.99
                    },
                    "stock": {
                        "title": "stock",
                        "description": "Stock available of product",
                        "type": "number",
                        "format": "float",
                        "example": 10
                    },
                    "image_url": {
                        "title": "image_url",
                        "description": "Url of the main image of the product",
                        "type": "string",
                        "example": "http://storage/asda.jpg"
                    },
                    "created_at": {
                        "title": "created_at",
                        "description": "Date of creation",
                        "type": "string",
                        "example": "2025-07-02 18:38:46"
                    },
                    "quantityInSale": {
                        "title": "quantityInSale",
                        "description": "Quantity of this product in a sale",
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "subtotal": {
                        "title": "subtotal",
                        "description": "Subtotal of this product in a sale",
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "sale_response": {
                "title": "SaleDTO",
                "description": "Response of a sale in each request related to it",
                "properties": {
                    "id": {
                        "title": "id",
                        "description": "ID of the sale",
                        "type": "integer",
                        "example": 1
                    },
                    "lng": {
                        "title": "lng",
                        "description": "Longitude of location",
                        "type": "string",
                        "example": 75.560052
                    },
                    "lat": {
                        "title": "lat",
                        "description": "Latitude of location",
                        "type": "string",
                        "example": -64.462155
                    },
                    "city": {
                        "title": "city",
                        "description": "City of sale",
                        "type": "string",
                        "example": "New Alfred"
                    },
                    "street": {
                        "title": "street",
                        "description": "Street of the sale",
                        "type": "string",
                        "example": "Werner Port"
                    },
                    "internal_number": {
                        "title": "internal_number",
                        "description": "Internal number of sale",
                        "type": "string",
                        "example": "S/N"
                    },
                    "external_number": {
                        "description": "External number of sale",
                        "type": "string",
                        "example": "S/N"
                    },
                    "references": {
                        "title": "references",
                        "description": "References to deploy the sale",
                        "type": "string",
                        "example": "Crossing the main street in the withe house"
                    },
                    "user": {
                        "$ref": "#/components/schemas/user_response"
                    },
                    "products": {
                        "title": "products",
                        "description": "Products in the sale",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/product_response"
                        }
                    },
                    "created_at": {
                        "title": "created_at",
                        "description": "Date of creation",
                        "type": "string",
                        "example": "2025-07-07 20:19:29"
                    },
                    "updated_at": {
                        "title": "update_at",
                        "description": "Date of last update",
                        "type": "string",
                        "example": "2025-07-07 20:19:29"
                    }
                },
                "type": "object"
            },
            "sale_request": {
                "title": "SaleRequestDTO",
                "description": "DTO used to make requests related with a sale, use it in create and update request",
                "properties": {
                    "lng": {
                        "description": "Longitude for the sale",
                        "type": "string",
                        "example": 19.041951517694,
                        "nullable": true
                    },
                    "lat": {
                        "description": "Latitude for the sale",
                        "type": "string",
                        "example": -98.199081402743,
                        "nullable": true
                    },
                    "street": {
                        "description": "Street to deploy the sale",
                        "type": "string",
                        "example": "Zaragosa",
                        "nullable": true
                    },
                    "city": {
                        "description": "City to deploy the sale",
                        "type": "string",
                        "example": "Puebla",
                        "nullable": true
                    },
                    "internal_number": {
                        "description": "Internal number of the house",
                        "type": "string",
                        "example": "S/N",
                        "nullable": true
                    },
                    "external_number": {
                        "description": "Street to deploy the sale",
                        "type": "string",
                        "example": "S/N",
                        "nullable": true
                    },
                    "references": {
                        "description": "Specific details to locate the place of deploy",
                        "type": "string",
                        "example": "Besides the blue house",
                        "nullable": true
                    },
                    "due_date": {
                        "description": "Due date to end the sale in format YYYY-MM-DDTHH:MM",
                        "type": "string",
                        "example": "2025-08-25T14:00",
                        "nullable": true
                    },
                    "products": {
                        "description": "",
                        "type": "array",
                        "items": {
                            "required": [
                                "product_id",
                                "quantity"
                            ],
                            "properties": {
                                "product_id": {
                                    "description": "ID of a product",
                                    "type": "integer",
                                    "example": 3
                                },
                                "quantity": {
                                    "description": "Quantity of items to buy",
                                    "type": "integer",
                                    "example": 5
                                }
                            },
                            "type": "object"
                        },
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "user_response": {
                "title": "UserDTO",
                "description": "Response of a user in each request related to it",
                "properties": {
                    "id": {
                        "description": "ID of the user",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Name of user",
                        "type": "string",
                        "example": "John Torres"
                    },
                    "email": {
                        "description": "Email of user",
                        "type": "string",
                        "example": "correo@correo.com"
                    },
                    "profile_picture": {
                        "description": "URL to profile picture",
                        "type": "string",
                        "example": "http://example/example.jpg"
                    },
                    "created_at": {
                        "description": "Date of creation",
                        "type": "string",
                        "example": "2025-07-02 18:38:46"
                    },
                    "updated_at": {
                        "description": "Date of the las update",
                        "type": "string",
                        "example": "2025-07-02 18:38:46"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerToken": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "auth",
            "description": "auth"
        },
        {
            "name": "sales",
            "description": "sales"
        }
    ]
}